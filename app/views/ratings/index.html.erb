<h2>Rating statistics</h2>

Total of <%= @ratings.count %> ratings given


<div class="row">
  <div class="col-md-4">
    <h3>Bestest beers</h3>
    <%= render 'list', da: @beers %>
  </div>
  <div class="col-md-4">
    <h3>Bestest breweries</h3>
    <%= render 'list', da: @breweries %>
  </div>
  <div class="col-md-4">
    <h3>Bestest styles</h3>
    <%= render 'list', da: @styles %>
  </div>
</div>

<h3>Most active users</h3>
<table class="table table-hover">
  <tr>
    <th></th>
    <th>favorite beer</th>
    <th>prefered style</th>
    <th>favorite brewery</th>
    <th>ratings</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <td><%= link_to u.username, u  %></td>
      <td><%= u.favorite_beer %></td>
      <td><%= u.favorite_style %></td>
      <td><%= u.favorite_brewery.name %></td>
      <td><%= u.ratings.count %></td>
    </tr>
      <% end %>
</table>

<h3>Recent ratings</h3>
<ul>
  <% @ratings.each do |rating| %>
    <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
  <% end %>
</ul>

<%= link_to 'New Rating', new_rating_path, class:"btn btn-primary" if current_user %>